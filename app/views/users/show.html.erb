<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <h2 class="pt-3">User info</h2>
      <% if @users.profile_image.attached? %>
       <%= image_tag @users.get_profile_image(100,100) %>
      <% else %>
       <%= image_tag 'no_image', size: "100x100" %><br>
      <% end %>
   <table class="table">
    <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= @users.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @users.introduction %></th>
     </tr>
    </tbody>  
   </table>
   <div class="row pt-4">
    <%= link_to edit_user_path(@users.id), class: 'btn btn-outline-secondary btn-block edit_user_9', method: :get do %>
    <i class="fas fa-user-cog"></i>
    <%end%>
    </div>
    <h2 class="mt-3">New book</h2>
     <%= form_with model: @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title, class:'form-group form-control book_title' %>
      <p>Opinion</p>
      <%= f.text_area :body, class:'form-group form-control book_body' %>
      <%= f.submit 'Create Book', class:'btn btn-success', method: :post %>
     <% end %>
  </div>
 <div class="col-md-8 offset-md-1">
  <h2 class="pt-3">Books</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
    <% @books.each do |books| %>
	<tr>
	 <td>
      <% if books.user.profile_image.attached? %>
       <%= link_to image_tag(books.user.get_profile_image(100,100)), user_path(books.user.id), method: :get %><br>
      <% else %>
       <%= link_to image_tag('no_image', size: "100x100"), user_path(books.user.id), method: :get %><br>
      <% end %>
	 </td>
	  <td><%= link_to books.title,book_path(books.id), method: :get %></td>
	  <td><%= books.body %></td>
	 </tr>
	 <% end %>
    </tbody>
   </table>
 </div>
 </div>
</div>