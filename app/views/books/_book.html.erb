 <h2 class="pt-3">User info</h2>
      <% if users.profile_image.attached? %>
       <%= image_tag users.get_profile_image(100,100) %>
      <% else %>
       <%= image_tag 'no_image', size: "100x100" %><br>
      <% end %>
   <table class="table">
    <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= users.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= users.introduction %></th>
     </tr>
    </tbody>  
   </table>
   <div class="row pt-4">
    <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block edit_user_9', method: :get do %>
    <i class="fa fa-user-cog fa-w-20"></i>
    <%end%>
    </div>
    <h2 class="mt-3">New book</h2>
     <%= form_with model: book do |f| %>
      <p>Title</p>
      <%= f.text_field :title, class:'form-group form-control book_title' %>
      <p>Opinion</p>
      <%= f.text_area :body, class:'form-group form-control book_body' %>
      <%= f.submit 'Create Book', class:'btn btn-success', method: :post %>
     <% end %>